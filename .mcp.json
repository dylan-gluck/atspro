{
  "mcpServers": {
    "shadcn-ui": {
      "command": "npx",
      "args": ["@jpisnice/shadcn-ui-mcp-server"]
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://atspro_user:dev_password_change_in_prod@localhost:5432/atspro"
      ]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {}
    },
    "language-server-ts": {
      "command": "mcp-language-server",
      "args": [
        "--workspace",
        "/Users/dylan/Workspace/projects/atspro/apps/web",
        "--lsp",
        "typescript-language-server",
        "--",
        "--stdio"
      ]
    },
    "language-server-py": {
      "command": "mcp-language-server",
      "args": [
        "--workspace",
        "/Users/dylan/Workspace/projects/atspro/apps/api",
        "--lsp",
        "pyright-langserver",
        "--",
        "--stdio"
      ]
    }
  }
